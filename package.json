{
  "name": "kijumbe-rotational-savings",
  "version": "1.0.0",
  "description": "Rotational Savings Platform with WhatsApp Integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install",
    "build-and-start": "npm run build && npm start",
    "production": "NODE_ENV=production node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "bot": "node bot-main.js",
    "bot:dev": "nodemon bot-main.js",
    "bot:prod": "NODE_ENV=production node bot-main.js",
    "start:all": "concurrently \"npm run start\" \"npm run bot\"",
    "test:bot": "node -e \"require('./bot-main.js').initializeBot().then(() => console.log('Bot test successful')).catch(e => {console.error('Bot test failed:', e); process.exit(1);})\""
  },
  "keywords": [
    "savings",
    "rotational",
    "whatsapp",
    "fintech",
    "tanzania"
  ],
  "author": "Kijumbe Team",
  "license": "MIT",
  "dependencies": {
    "appwrite": "^19.0.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
