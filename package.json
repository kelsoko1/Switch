{
  "name": "switch",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"cd server && npm run dev\"",
    "dev:frontend": "vite",
    "dev:backend": "cd server && npm run dev",
    "build": "npm run build:frontend && npm run build:server",
    "build:frontend": "vite build",
    "build:server": "cd server && npm install && npm run build",
    "start": "node server/index.js",
    "start:prod": "NODE_ENV=production node server/index.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v --rmi all",
    "deploy:docker": "chmod +x deploy-docker.sh && ./deploy-docker.sh",
    "deploy:prepare": "node deploy.js",
    "deploy:production": "npm run deploy:prepare && npm run build",
    "deploy:server": "./deploy-no-docker.sh",
    "appwrite:setup": "node src/scripts/setup-appwrite.js",
    "appwrite:init": "node -r esm src/scripts/initializeAppwriteCollections.js",
    "appwrite:seed": "node scripts/seed-appwrite.js",
    "appwrite:init-status": "node src/scripts/initializeStatusCollections.js",
    "postinstall": "cd server && npm install",
    "setup:server": "./scripts/setup-server.sh",
    "update:server": "./scripts/update-server.sh",
    "backup:data": "./scripts/backup.sh",
    "restore:data": "./scripts/restore.sh",
    "monitor:server": "./scripts/monitor-server.sh",
    "logs:app": "journalctl -u switch -f",
    "logs:nginx": "journalctl -u nginx -f"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "@types/axios": "^0.14.0",
    "@xmpp/client": "^0.13.6",
    "appwrite": "^20.0.0",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "janus-gateway-js": "^2.0.2",
    "lucide-react": "^0.344.0",
    "node-appwrite": "^19.1.0",
    "node-fetch": "^3.3.2",
    "qrcode.react": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.0",
    "react-router-dom": "^6.22.3",
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.6.0",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/simple-peer": "^9.11.8",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "esm": "^3.2.25",
    "globals": "^15.9.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^6.3.6"
  }
}
