# ======================
# Production Environment
# ======================

# Application
NODE_ENV=production
APP_NAME=Switch
APP_VERSION=1.0.0
APP_URL=https://kijumbesmart.co.tz:2025
API_URL=https://kijumbesmart.co.tz:2025/api

# Server
HOST=0.0.0.0
PORT=2025
HTTPS_PORT=2026
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# Frontend
VITE_APP_ENV=production
VITE_API_URL=${API_URL}
VITE_APP_NAME=${APP_NAME}
VITE_APP_VERSION=${APP_VERSION}
VITE_WS_URL=wss://kijumbesmart.co.tz:2025/ws

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=switch
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
EMAIL_FROM=Switch <noreply@kijumbesmart.co.tz>

# Appwrite
VITE_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your_project_id
VITE_APPWRITE_DATABASE_ID=your_database_id
VITE_APPWRITE_API_KEY=your_api_key

# Collection IDs
VITE_COLLECTION_USERS=users
VITE_COLLECTION_GROUPS=groups
VITE_COLLECTION_MEMBERS=members
VITE_COLLECTION_TRANSACTIONS=transactions
VITE_COLLECTION_PAYMENTS=payments
VITE_COLLECTION_OVERDRAFTS=overdrafts
VITE_COLLECTION_WHATSAPP_MESSAGES=whatsapp_messages
VITE_COLLECTION_WALLETS=wallets
VITE_COLLECTION_WALLET_TRANSACTIONS=wallet_transactions
VITE_COLLECTION_WALLET_PAYMENTS=wallet_payments

# Payment Gateway (Selcom)
SELCOM_BASE_URL=https://apigw.selcommobile.com/v1
SELCOM_API_KEY=your_selcom_api_key
SELCOM_API_SECRET=your_selcom_api_secret
SELCOM_MERCHANT_ID=your_selcom_merchant_id

# XMPP Configuration
VITE_XMPP_ENABLED=true
VITE_XMPP_DOMAIN=kijumbesmart.co.tz
VITE_XMPP_WS_URL=wss://kijumbesmart.co.tz:2026/ws
VITE_XMPP_BOSH_URL=https://kijumbesmart.co.tz:2026/bosh
VITE_XMPP_CONFERENCE_DOMAIN=conference.kijumbesmart.co.tz

# Janus WebRTC Configuration
VITE_JANUS_ENABLED=true
VITE_JANUS_WS_URL=wss://kijumbesmart.co.tz:8989/janus
VITE_JANUS_ADMIN_SECRET=your_janus_admin_secret

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/switch/app.log
ERROR_LOG_FILE=/var/log/switch/error.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_CHAT=true
FEATURE_VIDEO_CALLS=true
FEATURE_PAYMENTS=true
FEATURE_NOTIFICATIONS=true

# Security
CORS_ORIGIN=${APP_URL}
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true

# API Configuration
API_TIMEOUT=30000  # 30 seconds
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000  # 1 second

# ====================================
# DO NOT COMMIT SENSITIVE INFORMATION!
# Copy this file to .env.production and update the values
# ====================================
