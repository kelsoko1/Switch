# Frontend Environment Variables

# API Configuration
# API URL (not needed when using Vite proxy)
# VITE_API_URL=http://localhost:3000

# App Name
VITE_APP_NAME=Kijumbe Rotational Savings

# Appwrite Configuration (if using Appwrite directly in frontend)
VITE_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your_appwrite_project_id
VITE_APPWRITE_PROJECT_NAME=kijumbe

# Application Configuration
VITE_APP_NAME=Kijumbe
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=Rotational Savings Platform

# Feature Flags
VITE_ENABLE_WHATSAPP=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_INSURANCE=false

# External Services
VITE_WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/whatsapp/webhook
VITE_PAYMENT_GATEWAY_URL=https://pay.selcom.co.tz
VITE_INSURANCE_API_URL=https://api.insurance.co.tz
