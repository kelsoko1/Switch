{
  "name": "switch-server",
  "version": "1.0.0",
  "description": "Backend server for Switch application with wallet integration",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon index.js",
    "build": "mkdir -p dist && for dir in config middleware routes utils; do if [ -d \"$dir\" ]; then cp -r \"$dir\" dist/; fi; done && cp *.js dist/ 2>/dev/null || true",
