# Server Configuration
NODE_ENV=production
PORT=2025
HOST=0.0.0.0
FRONTEND_URL=https://kijumbesmart.co.tz
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Appwrite Configuration
VITE_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your_project_id
VITE_APPWRITE_DATABASE_ID=your_database_id
VITE_APPWRITE_API_KEY=your_api_key

# Collection IDs
VITE_COLLECTION_USERS=users
VITE_COLLECTION_GROUPS=groups
VITE_COLLECTION_MEMBERS=members
VITE_COLLECTION_TRANSACTIONS=transactions
VITE_COLLECTION_PAYMENTS=payments
VITE_COLLECTION_OVERDRAFTS=overdrafts
VITE_COLLECTION_WHATSAPP_MESSAGES=whatsapp_messages
VITE_COLLECTION_WALLETS=wallets
VITE_COLLECTION_WALLET_TRANSACTIONS=wallet_transactions
VITE_COLLECTION_WALLET_PAYMENTS=wallet_payments

# CORS Configuration
CORS_ORIGIN=https://kijumbesmart.co.tz
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true

# Payment Gateway (Selcom)
VITE_SELCOM_BASE_URL=https://apigw.selcommobile.com/v1
VITE_SELCOM_API_KEY=your_selcom_api_key
VITE_SELCOM_API_SECRET=your_selcom_api_secret
VITE_SELCOM_MERCHANT_ID=your_selcom_merchant_id
VITE_BASE_URL=https://kijumbesmart.co.tz

# XMPP/Janus Configuration
XMPP_SERVER=wss://kijumbesmart.co.tz:5280/ws
XMPP_DOMAIN=kijumbesmart.co.tz
EJABBERD_WS_URL=wss://kijumbesmart.co.tz:5280/ws
EJABBERD_DOMAIN=kijumbesmart.co.tz
EJABBERD_API_URL=https://kijumbesmart.co.tz:5280/api
EJABBERD_ADMIN=admin@kijumbesmart.co.tz
EJABBERD_ADMIN_PWD=your_secure_admin_password
USE_JANUS=true
JANUS_URL=wss://kijumbesmart.co.tz:8188
JANUS_JS_URL=https://kijumbesmart.co.tz:8088/janus.js

# Database Configuration (if using external database)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=kijumbesmart

# Redis Configuration (if using Redis)
REDIS_URL=redis://redis:6379

# Session Configuration (if using sessions)
SESSION_SECRET=your_session_secret

# Email Configuration (if sending emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@kijumbesmart.co.tz

# Feature Flags (enable/disable features)
FEATURE_CHAT=true
FEATURE_VIDEO=true
FEATURE_PAYMENTS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
SECURE_COOKIES=true
TRUST_PROXY=1

# Monitoring (if using monitoring tools)
PROMETHEUS_METRICS=false
HEALTH_CHECK_PATH=/api/health

# Performance
BODY_PARSER_LIMIT=10mb
QUERY_PARSER_EXTENDED=true
QUERY_PARSER_LIMIT=1000

# Caching (if using cache)
CACHE_TTL=3600  # 1 hour
CACHE_ENABLED=true

# File Uploads (if handling file uploads)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Background Jobs (if using job queues)
JOB_CONCURRENCY=1
JOB_TIMEOUT=30000  # 30 seconds

# Web Push Notifications (if using web push)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=your_email@example.com

# Analytics (if using analytics)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Error Tracking (if using error tracking)
SENTRY_DSN=your_sentry_dsn

# CDN (if using CDN for assets)
CDN_URL=https://cdn.kijumbesmart.co.tz

# Feature Flags (additional)
MAINTENANCE_MODE=false
REGISTRATION_OPEN=true

# External Services
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Backup Configuration (if using automated backups)
BACKUP_CRON=0 0 * * *  # Daily at midnight
BACKUP_RETENTION_DAYS=30

# Monitoring (additional)
UPTIME_MONITORING_URL=https://status.kijumbesmart.co.tz

# Performance Monitoring (if using APM)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=KijumbeSmart

# CI/CD (if using CI/CD)
CI=false
NODE_ENV=production

# Docker Configuration
DOCKER_NETWORK=switch-network
DOCKER_IP=kijumbesmart.co.tz

# Development Overrides (only for development)
# NODE_ENV=development
# DEBUG=kijumbe:*
# ENABLE_DEV_TOOLS=true
