# Server Configuration
PORT=3000
NODE_ENV=development

# Appwrite Configuration
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_api_key

# JWT Authentication
JWT_SECRET=your_very_long_and_secure_random_string
JWT_EXPIRATION=7d

# WhatsApp Integration (GreenAPI)
GREENAPI_ID_INSTANCE=your_instance_id
GREENAPI_API_TOKEN_INSTANCE=your_api_token
GREENAPI_BOT_PHONE=your_whatsapp_number

# Payment Gateway (Selcom)
SELCOM_BASE_URL=https://pay.selcom.co.tz
SELCOM_API_KEY=your_selcom_api_key
SELCOM_API_SECRET=your_selcom_api_secret

# Frontend Configuration
VITE_APPWRITE_ENDPOINT=${APPWRITE_ENDPOINT}
VITE_APPWRITE_PROJECT_ID=${APPWRITE_PROJECT_ID}

# Logging and Monitoring
LOG_LEVEL=info
ERROR_REPORTING_ENABLED=true

# Feature Flags
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_PAYMENT_GATEWAY=true
ENABLE_USER_REGISTRATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3001,https://yourdomain.com
HELMET_ENABLED=true
